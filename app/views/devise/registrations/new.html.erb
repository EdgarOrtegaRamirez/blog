<div class="row">
  <div class="span4">
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: 'well'}) do |f| %>
      <%= f.error_notification %>

      <fieldset>
        <legend>Sign Up</legend>
        <%= f.input :full_name, :required => true, :autofocus => true %>
        <%= f.input :email, :required => true, :autofocus => true %>
        <%= f.input :password, :required => true %>
        <%= f.input :password_confirmation, :required => true %>
        
        <div><%= f.button :submit, "Sign up", class: 'btn btn-primary' %></div>
      </fieldset>
    <% end %>
  </div>

  <div class="span8">
    <h2>Sign Up is easy and secure!</h2>
    <%= render "devise/shared/links" %>
  </div>
</div>
